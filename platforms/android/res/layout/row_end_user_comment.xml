<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/view_request_end_user_response_row" >

    <RelativeLayout style="@style/view_request_user_info_container">

        <TextView
            android:id="@+id/view_request_end_user_comment_date"
            style="@style/view_request_end_user_date_textview"
            tools:text="10 Jul 2014"/>

        <LinearLayout
            tools:ignore="RtlHardcoded,UseCompoundDrawables"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/view_request_end_user_comment_date"
            android:layout_marginRight="@dimen/view_horizontal_margin"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/view_request_end_user_avatar_imageview"
                style="@style/view_request_end_user_avatar_imageview"
                tools:ignore="ContentDescription"/>

            <TextView
                style="@style/view_request_end_user_name_textview"
                tools:text="Alice Lee"
                android:id="@+id/view_request_end_user_name_textview" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/view_request_end_user_response_textview"
        style="@style/view_request_end_user_response_textview"
        tools:text="Hi, I'm having a lot of trouble trying to log into my account. I have double checked my sub domain and email address and it only lets me log in on Wednesday evenings. Please help!"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_request_end_user_response_attachment_container">
    </LinearLayout>

</LinearLayout>