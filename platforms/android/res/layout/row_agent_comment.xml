<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/view_request_agent_row" >

    <RelativeLayout style="@style/view_request_user_info_container">

        <TextView
            android:id="@+id/view_request_agent_comment_date"
            style="@style/view_request_agent_date_textview"
            tools:text="10 Jul 2014"/>

        <LinearLayout
            tools:ignore="RtlHardcoded,UseCompoundDrawables"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/view_request_agent_comment_date"
            android:layout_marginRight="@dimen/view_horizontal_margin"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/view_request_agent_avatar_imageview"
                android:contentDescription="@string/view_request_agent_avatar_imageview_alt"
                style="@style/view_request_agent_avatar_imageview"/>

            <TextView
                style="@style/view_request_agent_name_textview"
                tools:text="Alice Lee"
                android:id="@+id/view_request_agent_name_textview" />

        </LinearLayout>



    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/view_request_agent_response_container">

        <TextView
            style="@style/view_request_agent_response_textview"
            tools:text="Sorry to hear that. It looks like you're using an older version of our app,this was a known issue that has been fixed in the release. Please update to resolve your issue.\n\nThanks,\nAlice"
            android:id="@+id/view_request_agent_response_textview" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_request_agent_response_attachment_container">
    </LinearLayout>

</LinearLayout>